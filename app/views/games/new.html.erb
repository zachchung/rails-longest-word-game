<div class="container">
  <h1>New game</h1>

  <ul class="list-inline">
    <% @letters.each do |letter| %>
      <li class="list-inline-item"><%= letter %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <!-- Pass @letters back to controller "score" as params -->
    <%= hidden_field_tag :letters, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word">
    <input type="submit" value="Play" class="btn btn-primary btn-sm">
  </form>

</div>
